public class dobro {

int num1;
int num2 = num1 + 2;

public int getNum1() {
return num1;
}

public void setNum1(int num1) {
this.num1 = num1;
}

public int getNum2() {
return num2;
}

public void setNum2(int num2) {
this.num2 = num2;
}

public void CalculaDobro() {
System.out.println("O Dobro do Número é: "+num2*num1);
}

}

